PORT=4000
NODE_ENV=development

# Database (PostgreSQL on AWS RDS)
DATABASE_URL=postgresql://user:password@host:5432/oran

# Redis (e.g., AWS ElastiCache)
REDIS_URL=redis://host:6379

# AWS
AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_S3_BUCKET=oran-bucket

# Paystack
PAYSTACK_SECRET_KEY=your-paystack-secret
PAYSTACK_PUBLIC_KEY=your-paystack-public

# OpenAI / LLM
OPENAI_API_KEY=your-openai-key
GEMINI_API_KEY=your-gemini-key
GEMINI_MODEL=gemini-2.5-flash

# Auth / JWT
JWT_SECRET=super-secret-jwt-key
JWT_EXPIRES_IN=7d

# Email / SMTP
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=oran-smtp-user
SMTP_PASS=oran-smtp-password
SMTP_FROM="ORAN Smart Home <no-reply@oran.example>"

# Frontend base URL (for email links)
FRONTEND_BASE_URL=https://oran-system.vercel.app
